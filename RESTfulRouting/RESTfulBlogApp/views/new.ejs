<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class = "ui huge header">Share Your Favorite Street Food</div>
    
    <form class = "ui form" action = "/blogs" method = "post">
        <div class = "field">
            <label>Title</label>
            <input type = "text" name = "blog[title]" placeholder = "name">
        </div>
        <div class = "field">
            <label>Image</label>
            <input type = "text" name = "blog[image]" placeholder = "image url">
        </div>
        <div class = "field">
            <label>Tell something about this street food</label>
            <textarea name = "blog[body]" ></textarea>
        </div>
        
        <input class = "ui violet big basic button" type = "submit" >
        
    </form>
    
</div>

<% include ./partials/footer %>
